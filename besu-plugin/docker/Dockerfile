FROM hyperledger/besu:latest
COPY --chown=besu:besu standalone/build/libs/*.jar  /opt/besu/plugins/

EXPOSE 30303 8545 8551 8546 8547 8888 9545

ENV BESU_LOGGING=INFO \
    BESU_NETWORK=HOLESKY \
    BESU_SYNC_MODE=FAST \
    BESU_SYNC_MIN_PEERS=1 \
    BESU_METRICS_ENABLED=true \
    BESU_DATA_PATH=/opt/besu/data

ENTRYPOINT ["besu", "--rpc-http-enabled", "--rpc-http-host=0.0.0.0", "--metrics-host=0.0.0.0",  "--rpc-http-api=ADMIN,ETH,SAMBA"]


